# Discord Bot Token (from Discord Developer Portal > Bot > Token)
DISCORD_TOKEN=your_bot_token_here

# Gemini API Key (from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Role ID for moderator @mentions on high-severity violations
# MOD_ROLE_ID=123456789012345678

# Optional: Buffer settings
BUFFER_FLUSH_THRESHOLD=10
BUFFER_TIMEOUT_SECS=30

# Optional: Health check port
HEALTH_PORT=8080

# Optional: Custom regex patterns (comma-separated)
# REGEX_SLURS=badword1,badword2
# REGEX_INVITE_LINKS=discord\.gg/[a-zA-Z0-9]+
# REGEX_PHISHING_URLS=free-nitro\.com

# OAuth Configuration for Web Dashboard
# Discord OAuth Client ID (from Discord Developer Portal > OAuth2)
DISCORD_CLIENT_ID=your_client_id_here

# Discord OAuth Client Secret (from Discord Developer Portal > OAuth2)
DISCORD_CLIENT_SECRET=your_client_secret_here

# Dashboard URL (used for OAuth redirect URI)
# In production, set this to your actual domain (e.g., https://dashboard.example.com)
DASHBOARD_URL=http://localhost:3000

# Optional: Web dashboard port
WEB_PORT=8081
