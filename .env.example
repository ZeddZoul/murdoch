# Discord Bot Token (from Discord Developer Portal > Bot > Token)
DISCORD_TOKEN=your_bot_token_here

# Gemini API Key (from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Role ID for moderator @mentions on high-severity violations
# MOD_ROLE_ID=123456789012345678

# Optional: Buffer settings
BUFFER_FLUSH_THRESHOLD=10
BUFFER_TIMEOUT_SECS=30

# Optional: Health check port
HEALTH_PORT=8080

# Optional: Custom regex patterns (comma-separated)
# REGEX_SLURS=badword1,badword2
# REGEX_INVITE_LINKS=discord\.gg/[a-zA-Z0-9]+
# REGEX_PHISHING_URLS=free-nitro\.com
